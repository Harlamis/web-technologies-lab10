mixin lgProductCard(item)
    article.product-card
        .product-card__image-wrapper
            img.product-card__img(src=`/src/assets/${item.image}` alt=item.title)
        .product-card__info
            h3.product-card__title= item.title
            p.product-card__desc= item.description
            span.product-card__price= item.price